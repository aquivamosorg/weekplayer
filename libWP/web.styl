@import "nib"

.Title
  color #616161
  font-weight 300
  &-categori
    font-size 25px
    font-weight 600
    padding 0 20px
  &-card
    color black
header.row
  margin-bottom 0 
.Contenedor
  padding 30px 0
.Contenedor-Gris
  padding 30px 0
  background-color #f5f5f5
  background-image url(../img/fondo-02.png)
  background-repeat repeat 
  border-top 1px solid #B3B3B3
  border-bottom 1px solid #B3B3B3
.card-reveal > span > i
  color #B71C1C
.card-content > span > i  
  color #616161
.Contenedor-img
  text-align center
  margin-bottom 20px 
.Contenedor
  &-top
    background-color #E0E0E0
    height 65px
  &-productos
    margin-top -20px
  &-redes
    margin-bottom 10px
  &-redes > i
    font-size 80px
  &-redes > i.fa.fa-facebook
    colo #3a579a
section.Contenedor-productos
  margin-top -60px 
  display block
.blanco
  background-color white
.Negro-transparente
  background rgba(black,0.7) !important
  display block !important
.Precio-card
  position absolute
  top 10px
  right 10px
  z-index 100
  padding 5px 10px
  border-radius 2px
  color white
  font-weight 600
  
  
.Red
  &-instagram
    color #2e5e86
  &-facebook
    color #3a579a
  &-twitter
    color #00abf0
  &-plus
    color #d34836
  
section.Single
  margin-top 30px
  background red
.Single
  &-top
    margin-top 20px
  &-img
    border 1px solid #E0E1E5
    margin-bottom 20px
    > img
      width 100%
      height auto
  &-content
    margin-left 10px
  &-title 
    text-transform uppercase
    font-size 25px
    font-weight 600
  &-precios
    border 1px solid #E0E1E5
    padding 20px 0
    margin-bottom 10px
    > span
      font-size 35px
      font-weight 600
    > a
      font-size 18px
      font-weight 600 
    > p
      font-weight 600
  &-verde
    border 2px solid #3abb61
    padding 10px 0
    background #C6FFCC
    > span 
      font-size 25px 
      color #3abb61
      font-weight 600
  &-tab
    border-top 1px solid #E0E1E5
    border-left 1px solid #E0E1E5
  &-tabI
    border-right 1px solid #E0E1E5
    border-bottom 1px solid #E0E1E5
    border-left 1px solid #E0E1E5
    padding 15px 12px !important
.tabs .indicator
  background-color #0D47A1 !important
.Pop:target
  display block
  position absolute
  background rgba(black, 0.7)
  top 0
  right 0
  bottom 0
  left 0
  z-index 1000
.Pop 
  display none
  &-content
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
  &-box
    border-radius 5px 
    padding 20px
  &-link
    padding 10px !important
@media only screen and (max-width 600px)
  .Single-img
    padding 10px !important
@media only screen and (min-width 601px) and (max-width 992px)
  .Single-img
    padding 15px !important    
@media only screen and (min-width 993px)
  .Single-img
    padding 20px !important
.wp-post-image
  height auto
.Page
  padding-top 45px !important  
.Page-content
  border-radius 10px
  padding 20px
  margin-bottom 45px !important    
.Page-title
  margin-bottom 30px
.Sider
  padding-top 15px !important
  &-link
    display block
    padding-top 10px
  &-link:hover
    display block
    background rgba(white, 0.5)
  &-span:hover
    text-decoration underline
.Login
  width 100vw
  height 100vh
  display flex
  justify-content center
  align-items center
.Login-title
  border 1px solid white
.Login-content
  padding 0 15px    
  border-radius 5px
.Login-form
  padding 15px 0 !important
@media only screen and (max-width 600px)    
  .Login-content
    width 85%
@media only screen and (min-width 601px) and (max-width 992px)
  .Login-content
    width 70%
    max-width 500px
@media only screen and (min-width 993px)  
  .Login-content
    width 70%
    max-width 600px